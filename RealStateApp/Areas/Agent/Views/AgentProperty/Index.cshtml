@model List<RealStateApp.Core.Application.ViewModels.Property.PropertyViewModel>

@{
    ViewData["Title"] = "Mantenimiento de Propiedades";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="bi bi-tools"></i> Mantenimiento de Propiedades</h2>
        <a asp-action="Create" class="btn btn-success">
            <i class="bi bi-plus-circle"></i> Crear Nueva Propiedad
        </a>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info">
            <i class="bi bi-info-circle"></i>
            No tienes propiedades disponibles registradas. ¡Crea tu primera propiedad!
        </div>
    }
    else
    {
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
            @foreach (var prop in Model)
            {
                <div class="col">
                    <div class="card h-100 shadow-sm">
                        @if (!string.IsNullOrEmpty(prop.FirstImageUrl))
                        {
                            <img src="@prop.FirstImageUrl" 
                                 class="card-img-top" 
                                 style="height: 200px; object-fit: cover;" 
                                 alt="@prop.PropertyType" />
                        }
                        else
                        {
                            <div class="bg-secondary d-flex align-items-center justify-content-center" 
                                 style="height: 200px;">
                                <i class="bi bi-house-door text-white" style="font-size: 3rem;"></i>
                            </div>
                        }

                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-start mb-2">
                                <span class="badge bg-primary">@prop.PropertyType</span>
                                <span class="badge bg-info">@prop.SaleType</span>
                            </div>

                            <h5 class="card-title">Código: @prop.Code</h5>

                            <p class="card-text">
                                <strong class="text-success">RD$ @prop.Price.ToString("N2")</strong>
                            </p>

                            <div class="d-flex justify-content-between text-muted small mb-3">
                                <span><i class="bi bi-door-closed"></i> @prop.Rooms hab.</span>
                                <span><i class="bi bi-droplet"></i> @prop.Bathrooms baños</span>
                                <span><i class="bi bi-rulers"></i> @prop.SizeInMeters m²</span>
                            </div>

                            <div class="d-grid gap-2">
                                <div class="btn-group" role="group">
                                    <a asp-action="Edit" asp-route-id="@prop.Id" 
                                       class="btn btn-sm btn-warning text-white">
                                        <i class="bi bi-pencil"></i> Editar
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@prop.Id" 
                                       class="btn btn-sm btn-danger">
                                        <i class="bi bi-trash"></i> Eliminar
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>