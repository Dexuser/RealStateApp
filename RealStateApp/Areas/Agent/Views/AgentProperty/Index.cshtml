@model List<RealStateApp.Core.Application.ViewModels.Property.PropertyViewModel>

@{
    ViewData["Title"] = "Mantenimiento de Propiedades";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="bi bi-tools"></i> Mantenimiento de Propiedades</h2>
        <a asp-action="Create" class="btn btn-success">
            <i class="bi bi-plus-circle"></i> Crear Nueva Propiedad
        </a>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info">
            <i class="bi bi-info-circle"></i>
            No tienes propiedades disponibles registradas. ¡Crea tu primera propiedad!
        </div>
    }
    else
    {
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
            @foreach (var prop in Model)
            {
                <div class="col-md-6 col-lg-4 mb-4">
                    <div class="card shadow-sm h-100">

                        @{
                            var imagePath = prop.PropertyImages.Single().ImagePath;
                        }

                        <div class="position-relative">

                            <img src="@imagePath"
                                 class="card-img-top"
                                 alt="Imagen de propiedad"
                                 style="height: 180px; object-fit: cover;"/>

                            @if (prop.IsAvailable)
                            {
                                <span class="badge bg-success position-absolute bottom-0 end-0 m-2">Disponible</span>
                            }
                            else
                            {
                                <span class="badge bg-danger position-absolute bottom-0 end-0 m-2">Vendido</span>
                            }

                        </div>

                        <div class="card-body">
                            <h5 class="card-title">Tipo: @prop.PropertyType!.Name</h5>
                            <p class="card-text text-muted mb-2">
                                Codigo: @prop.Code
                            </p>
                            <p class="card-text text-muted mb-2">
                                Tipo de venta: @prop.SaleType!.Name
                            </p>

                            <p class="fw-bold text-primary">
                                RD$ @prop.Price.ToString("N0")
                            </p>

                            <ul class="list-inline small">
                                <li class="list-inline-item"><i class="bi bi-door-open"></i> @prop.Rooms Hab.</li>
                                <li class="list-inline-item"><i class="bi bi-droplet"></i> @prop.Bathrooms Baños</li>
                                <li class="list-inline-item"><i
                                        class="bi bi-bounding-box-circles"></i> @prop.SizeInMeters mt
                                </li>
                            </ul>
                        </div>

                        <div class="card-footer bg-white">
                            <div class="d-flex w-100">

                                <div class="flex-grow-1 me-2">
                                    <a asp-action="Details" asp-route-id="@prop.Id"
                                       class="btn btn-outline-primary w-100">
                                        Detalles
                                    </a>
                                </div>

                                <div class="flex-grow-1 me-2">
                                    <a asp-action="Edit" asp-route-id="@prop.Id" class="btn btn-outline-warning w-100">
                                        Editar
                                    </a>
                                </div>

                                <div class="flex-grow-1 me-2">
                                    <a asp-action="Delete" asp-route-id="@prop.Id" class="btn btn-outline-danger w-100">
                                        Eliminar
                                    </a>
                                </div>

                            </div>
                        </div>

                    </div>
                </div>
            }
        </div>
    }
</div>