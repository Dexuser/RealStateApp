@model RealStateApp.Core.Application.ViewModels.Property.PropertyEditViewModel

@{
    ViewData["Title"] = "Editar Propiedad";
}

<div class="container-fluid">
    <div class="card shadow">
        <div class="card-header bg-warning text-dark">
            <h4 class="mb-0"><i class="bi bi-pencil-square"></i> Editar Propiedad</h4>
        </div>
        <div class="card-body">

            @if (Model.PropertyTypes.Any() != true ||
                  Model.SaleTypes.Any() != true ||
                   Model.Improvements.Any() != true)
            {
                <div class="alert alert-danger">
                    <i class="bi bi-exclamation-triangle"></i>
                    <strong>No se puede cargar el formulario</strong><br/>
                    Faltan datos maestros. Contacte al administrador.
                </div>
                <a asp-action="Index" class="btn btn-secondary">Volver al Listado</a>
            }
            else
            {
                <form asp-action="Edit" method="post" enctype="multipart/form-data">
                    <input type="hidden" asp-for="Id"/>
                    <input type="hidden" asp-for="Code"/>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="PropertyTypeId" class="form-label">Tipo de Propiedad *</label>
                            <select asp-for="PropertyTypeId" class="form-select" asp-items="Model.PropertyTypes">
                                <option value="">-- Seleccione --</option>
                            </select>
                            <span asp-validation-for="PropertyTypeId" class="text-danger"></span>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label asp-for="SaleTypeId" class="form-label">Tipo de Venta *</label>
                            <select asp-for="SaleTypeId" class="form-select" asp-items="Model.SaleTypes">
                                <option value="">-- Seleccione --</option>
                            </select>
                            <span asp-validation-for="SaleTypeId" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Price" class="form-label">Precio (RD$) *</label>
                        <input asp-for="Price" type="number" step="0.01" min="0" class="form-control"/>
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Description" class="form-label">Descripción *</label>
                        <textarea asp-for="Description" class="form-control" rows="4"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>

                    <div class="row">
                        <div class="col-md-4 mb-3">
                            <label asp-for="SizeInMeters" class="form-label">Tamaño (m²) *</label>
                            <input asp-for="SizeInMeters" type="number" step="0.01" min="0" class="form-control"/>
                            <span asp-validation-for="SizeInMeters" class="text-danger"></span>
                        </div>

                        <div class="col-md-4 mb-3">
                            <label asp-for="Rooms" class="form-label">Habitaciones *</label>
                            <input asp-for="Rooms" type="number" min="1" class="form-control"/>
                            <span asp-validation-for="Rooms" class="text-danger"></span>
                        </div>

                        <div class="col-md-4 mb-3">
                            <label asp-for="Bathrooms" class="form-label">Baños *</label>
                            <input asp-for="Bathrooms" type="number" min="1" class="form-control"/>
                            <span asp-validation-for="Bathrooms" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Mejoras</label>
                        <div class="border rounded p-3" style="max-height: 200px; overflow-y: auto;">
                            @if (Model.Improvements != null)
                            {
                                @foreach (var item in Model.Improvements)
                                {
                                    bool isChecked = Model.SelectedImprovements.Any(id => id.ToString() == item.Value);
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox"
                                               name="SelectedImprovements" value="@item.Value"
                                               id="improvement_@item.Value"
                                               @(isChecked ? "checked" : "")/>
                                        <label class="form-check-label" for="improvement_@item.Value">
                                            @item.Text
                                        </label>
                                    </div>
                                }
                            }
                        </div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Imágen Principal *</label>
                        <input name="MainImage" type="file" class="form-control" accept="image/*"  />
                        <small class="form-text text-muted">Selecciona una imagen principal</small>
                        <span asp-validation-for="MainImage" class="text-danger"></span>
                    </div>
                
                    <div class="mb-3">
                        <label class="form-label">Imágenes (1-4) </label>
                        <input name="AdditionalImages" type="file" class="form-control" accept="image/*" multiple />
                        <small class="form-text text-muted">Selecciona entre 1 y 4 imágenes.</small>
                        <span asp-validation-for="AdditionalImages" class="text-danger"></span>
                    </div>

                    <div class="d-grid gap-2 mt-4">
                        <button type="submit" class="btn btn-warning text-white">
                            <i class="bi bi-save"></i> Guardar Cambios
                        </button>
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="bi bi-arrow-left"></i> Volver al Listado
                        </a>
                    </div>
                </form>
            }
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial"/>
}