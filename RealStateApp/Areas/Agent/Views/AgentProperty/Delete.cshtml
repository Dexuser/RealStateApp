@model RealStateApp.Core.Application.ViewModels.Property.PropertyDeleteViewModel

@{
    ViewData["Title"] = "Eliminar Propiedad";
}

<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-header bg-danger text-white">
                    <h4 class="mb-0"><i class="bi bi-exclamation-triangle"></i> Confirmar Eliminación</h4>
                </div>
                <div class="card-body text-center">
                    
                    @if (!string.IsNullOrEmpty(Model.MainImageUrl))
                    {
                        <img src="@Model.MainImageUrl" 
                             class="img-fluid rounded mb-3" 
                             style="max-height: 200px; object-fit: cover;" 
                             alt="Propiedad" />
                    }

                    <h5 class="mb-3">¿Está seguro que desea eliminar esta propiedad?</h5>
                    
                    <div class="alert alert-warning">
                        <strong>Código:</strong> @Model.Code<br/>
                        <strong>Tipo:</strong> @Model.PropertyTypeName<br/>
                        <strong>Precio:</strong> RD$ @Model.Price.ToString("N2")
                    </div>

                    <p class="text-muted">
                        Esta acción no se puede deshacer.
                    </p>

                    <form asp-action="Delete" method="post">
                        <input type="hidden" asp-for="Id" />
                        
                        <div class="d-grid gap-2 mt-4">
                            <button type="submit" class="btn btn-danger">
                                <i class="bi bi-trash"></i> Sí, Eliminar
                            </button>
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="bi bi-x-circle"></i> Cancelar
                            </a>
                        </div>
                    </form>

                </div>
            </div>
        </div>
    </div>
</div>