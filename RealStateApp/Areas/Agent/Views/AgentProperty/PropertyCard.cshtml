@model RealStateApp.Core.Application.ViewModels.Property.PropertyViewModel

<div class="col">
    <div class="card h-100 shadow-sm">
        <a asp-controller="Home" asp-action="Details" asp-route-id="@Model.Id" class="text-decoration-none text-dark">
            
            @if (!string.IsNullOrEmpty(Model.FirstImageUrl))
            {
                <img src="@Model.FirstImageUrl" 
                     class="card-img-top" 
                     style="height: 200px; object-fit: cover;" 
                     alt="@Model.PropertyType" />
            }
            else
            {
                <div class="bg-secondary d-flex align-items-center justify-content-center" 
                     style="height: 200px;">
                    <i class="bi bi-house-door text-white" style="font-size: 3rem;"></i>
                </div>
            }

            <div class="card-body">
                <div class="d-flex justify-content-between align-items-start mb-2">
                    <span class="badge bg-primary">@Model.PropertyType</span>
                    <span class="badge bg-info">@Model.SaleType</span>
                </div>

                <h5 class="card-title">Código: @Model.Code</h5>

                <p class="card-text">
                    <strong class="text-success">RD$ @Model.Price.ToString("N2")</strong>
                </p>

                <div class="d-flex justify-content-between text-muted small">
                    <span><i class="bi bi-door-closed"></i> @Model.Rooms hab.</span>
                    <span><i class="bi bi-droplet"></i> @Model.Bathrooms baños</span>
                    <span><i class="bi bi-rulers"></i> @Model.SizeInMeters m²</span>
                </div>
            </div>
        </a>
    </div>
</div>