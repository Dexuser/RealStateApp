@model List<RealStateApp.Core.Application.ViewModels.Property.PropertyViewModel>

@{
    ViewData["Title"] = "Mis Propiedades";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="bi bi-buildings"></i> Mis Propiedades</h2>
        <a asp-area="Agent" asp-controller="AgentProperty" asp-action="Create" 
           class="btn btn-success">
            <i class="bi bi-plus-circle"></i> Crear Nueva Propiedad
        </a>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info">
            <i class="bi bi-info-circle"></i>
            No tienes propiedades registradas. ¡Comienza creando tu primera propiedad!
        </div>
    }
    else
    {
        <!-- Estadísticas -->
        <div class="row mb-4">
            <div class="col-md-6">
                <div class="card text-center border-primary">
                    <div class="card-body">
                        <h5 class="card-title text-primary">
                            <i class="bi bi-house-check"></i> Propiedades Disponibles
                        </h5>
                        <h2 class="display-4">@Model.Count(p => p.IsAvailable )</h2>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="card text-center border-success">
                    <div class="card-body">
                        <h5 class="card-title text-success">
                            <i class="bi bi-cash-coin"></i> Propiedades Vendidas
                        </h5>
                        <h2 class="display-4">@Model.Count(p => p.IsAvailable)</h2>
                    </div>
                </div>
            </div>
        </div>

        <!-- Lista de propiedades -->
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
            @foreach (var prop in Model)
            {
                <div class="col">
                    <div class="card h-100 shadow-sm @(prop.IsAvailable ? "border-success" : "")">
                        @if (prop.IsAvailable)
                        {
                            <div class="position-absolute top-0 start-0 m-2">
                                <span class="badge bg-success" style="font-size: 1rem;">
                                    <i class="bi bi-check-circle"></i> VENDIDA
                                </span>
                            </div>
                        }

                        @if (!string.IsNullOrEmpty(prop.FirstImageUrl))
                        {
                            <img src="@prop.FirstImageUrl"
                                 class="card-img-top"
                                 style="height: 200px; object-fit: cover;"
                                 alt="@prop.PropertyType" />
                        }
                        else
                        {
                            <div class="bg-secondary d-flex align-items-center justify-content-center"
                                 style="height: 200px;">
                                <i class="bi bi-house-door text-white" style="font-size: 3rem;"></i>
                            </div>
                        }

                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-start mb-2">
                                <span class="badge bg-primary">@prop.PropertyType</span>
                                <span class="badge bg-info">@prop.SaleType</span>
                            </div>

                            <h5 class="card-title">Código: @prop.Code</h5>

                            <p class="card-text">
                                <strong class="text-success">RD$ @prop.Price.ToString("N2")</strong>
                            </p>

                            <div class="d-flex justify-content-between text-muted small mb-3">
                                <span><i class="bi bi-door-closed"></i> @prop.Rooms hab.</span>
                                <span><i class="bi bi-droplet"></i> @prop.Bathrooms baños</span>
                                <span><i class="bi bi-rulers"></i> @prop.SizeInMeters m²</span>
                            </div>

                            <div class="d-grid">
                                <a asp-area="Agent" 
                                   asp-controller="Home" 
                                   asp-action="Details" 
                                   asp-route-id="@prop.Id"
                                   class="btn btn-sm btn-outline-primary">
                                    <i class="bi bi-eye"></i> Ver Detalles y Ofertas
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>