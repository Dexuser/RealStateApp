@model AdminDashBoardViewModel

@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="container-fluid py-4">

    <!-- Header -->
    <div class="row mb-4">
        <div class="col-12">
            <h2 class="mb-0">Dashboard de administrador</h2>
            <p class="text-muted">Resumen del sistema inmobiliario</p>
        </div>
    </div>

    @if (ViewBag.Message != null)
    {
        <div class="alert alert-warning alert-dismissible fade show" role="alert">
            @ViewBag.Message
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Cards Section -->
    <div class="row g-4">

        <!-- Propiedades disponibles -->
        <div class="col-md-6 col-lg-3">
            <div class="card border-0 shadow-sm">
                <div class="card-body d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="text-muted mb-2">Propiedades disponibles</h6>
                        <h3 class="mb-0">@Model.AvailablePropertiesCount</h3>
                    </div>
                    <div class="bg-success bg-opacity-10 rounded-circle p-3">
                        <i class="bi bi-house-door text-success fs-4"></i>
                    </div>
                </div>
            </div>
        </div>

        <!-- Propiedades vendidas -->
        <div class="col-md-6 col-lg-3">
            <div class="card border-0 shadow-sm">
                <div class="card-body d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="text-muted mb-2">Propiedades vendidas</h6>
                        <h3 class="mb-0">@Model.SoldPropertiesCount</h3>
                    </div>
                    <div class="bg-primary bg-opacity-10 rounded-circle p-3">
                        <i class="bi bi-check2-circle text-primary fs-4"></i>
                    </div>
                </div>
            </div>
        </div>

        <!-- Agentes activos -->
        <div class="col-md-6 col-lg-3">
            <div class="card border-0 shadow-sm">
                <div class="card-body d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="text-muted mb-2">Agentes activos</h6>
                        <h3 class="mb-0">@Model.ActiveAgentsCount</h3>
                    </div>
                    <div class="bg-info bg-opacity-10 rounded-circle p-3">
                        <i class="bi bi-person-badge text-info fs-4"></i>
                    </div>
                </div>
            </div>
        </div>

        <!-- Agentes inactivos -->
        <div class="col-md-6 col-lg-3">
            <div class="card border-0 shadow-sm">
                <div class="card-body d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="text-muted mb-2">Agentes inactivos</h6>
                        <h3 class="mb-0">@Model.InactiveAgentsCount</h3>
                    </div>
                    <div class="bg-secondary bg-opacity-10 rounded-circle p-3">
                        <i class="bi bi-person-x text-secondary fs-4"></i>
                    </div>
                </div>
            </div>
        </div>

        <!-- Clientes activos -->
        <div class="col-md-6 col-lg-3">
            <div class="card border-0 shadow-sm">
                <div class="card-body d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="text-muted mb-2">Clientes activos</h6>
                        <h3 class="mb-0">@Model.ActiveClientsCount</h3>
                    </div>
                    <div class="bg-success bg-opacity-10 rounded-circle p-3">
                        <i class="bi bi-people-fill text-success fs-4"></i>
                    </div>
                </div>
            </div>
        </div>

        <!-- Clientes inactivos -->
        <div class="col-md-6 col-lg-3">
            <div class="card border-0 shadow-sm">
                <div class="card-body d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="text-muted mb-2">Clientes inactivos</h6>
                        <h3 class="mb-0">@Model.InactiveClientsCount</h3>
                    </div>
                    <div class="bg-secondary bg-opacity-10 rounded-circle p-3">
                        <i class="bi bi-person-dash-fill text-secondary fs-4"></i>
                    </div>
                </div>
            </div>
        </div>

        <!-- Desarrolladores activos -->
        <div class="col-md-6 col-lg-3">
            <div class="card border-0 shadow-sm">
                <div class="card-body d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="text-muted mb-2">Desarrolladores activos</h6>
                        <h3 class="mb-0">@Model.ActiveDevelopersCount</h3>
                    </div>
                    <div class="bg-warning bg-opacity-10 rounded-circle p-3">
                        <i class="bi bi-terminal text-warning fs-4"></i>
                    </div>
                </div>
            </div>
        </div>

        <!-- Desarrolladores inactivos -->
        <div class="col-md-6 col-lg-3">
            <div class="card border-0 shadow-sm">
                <div class="card-body d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="text-muted mb-2">Desarrolladores inactivos</h6>
                        <h3 class="mb-0">@Model.InActiveDevelopersCount</h3>
                    </div>
                    <div class="bg-danger bg-opacity-10 rounded-circle p-3">
                        <i class="bi bi-person-x-fill text-danger fs-4"></i>
                    </div>
                </div>
            </div>
        </div>

    </div>

</div>
