@using Microsoft.AspNetCore.Identity
@using RealStateApp.Infrastructure.Identity.Entities
@inject UserManager<AppUser> UserManager

@{
    Layout = null;
    var user = await UserManager.GetUserAsync(User);
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - Admin</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"/>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet"/>
    <link rel="stylesheet" href="~/css/panel.css" asp-append-version="true" />
</head>
<body>

    <!-- NAVBAR -->
    <nav class="navbar navbar-dark px-4" style="background-color:#343a40; height:56px;">
        <div class="d-flex align-items-center">
            <i class="bi bi-building-check fs-4 text-white me-2"></i>
            <span class="navbar-brand mb-0 h1">RealStateApp - Admin</span>
        </div>

        <div class="text-white d-flex align-items-center">
            <span class="me-3">Hola, <strong>@($"{user?.FirstName} {user?.LastName}")</strong></span>
            <a class="btn btn-outline-light btn-sm" asp-area="" asp-controller="Login" asp-action="LogOut">
                <i class="bi bi-box-arrow-right"></i> Salir
            </a>
        </div>
    </nav>

    <div class="d-flex">

        <!-- SIDEBAR -->
        <aside class="sidebar">

            <a class="side-item" asp-area="Admin" asp-controller="Home" asp-action="Index">
                <i class="bi bi-speedometer2"></i> Dashboard
            </a>
            

            <div class="side-section">Usuarios</div>
            <a class="side-item" asp-area="Admin" asp-controller="Agent" asp-action="Index">
                <i class="bi bi-person-badge"></i> Agentes
            </a>
            <a class="side-item" asp-area="Admin" asp-controller="Developer" asp-action="Index">
                <i class="bi bi-terminal"></i> Desarrolladores
            </a>
            <a class="side-item" asp-area="Admin" asp-controller="Admin" asp-action="Index">
                <i class="bi bi-shield-lock"></i> Administradores
            </a>


            <div class="side-section">Propiedades</div>

            <a class="side-item" asp-area="Admin" asp-controller="PropertyType" asp-action="Index">
                <i class="bi bi-tags"></i> Tipos
            </a>
            
            <div class="side-section">Negocios</div>
            <a class="side-item" asp-area="" asp-controller="" asp-action="">
                <i class="bi bi-cash-coin"></i> Ofertas
            </a>

            <div class="side-section">Sistema</div>
            <a class="side-item" asp-area="" asp-controller="" asp-action="">
                <i class="bi bi-gear"></i> Configuración
            </a>

        </aside>

        <!-- MAIN CONTENT -->
        <main class="main-panel">
            @RenderBody()
        </main>

    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required:false)
</body>
</html>
