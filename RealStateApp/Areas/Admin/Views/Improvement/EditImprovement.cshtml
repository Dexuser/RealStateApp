@model EditImprovementViewModel
@{
    ViewData["Title"] = "Editar mejora";
}

<div class="row">
    <div class="d-flex justify-content-center">
        <div class="col-md-5">
            @* Mensaje de información *@
            @if (ViewBag.Message != null)
            {
                <div class="alert alert-info alert-dismissible fade show" role="alert">
                    @if (ViewBag.Message is string)
                    {
                        <p class="text-center">@Html.Raw(ViewBag.Message.Replace("\n", "<br />"))</p>
                    }
                    else
                    {
                        @foreach (var line in ViewBag.Message)
                        {
                            <p class="text-center">@line</p>
                        }
                    }
                    <br />
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            <div class="card shadow">
                <div class="card-header bg-primary text-light text-center">
                    <h3 class="card-title">Rellena este formulario</h3>
                </div>
                <div class="card-body">
                    <form asp-area="Admin" asp-controller="Improvement" asp-action="EditImprovement" method="post">
                        <input type="hidden" value="@Model.Id"  asp-for="Id"/>
                        <div class="mt-2">
                            <label class="form-label" asp-for="Name">Nombre:</label>
                            <input class="form-control" asp-for="Name"/>
                            <span class="text-danger" asp-validation-for="Name"></span>
                        </div>

                        <div class="mt-2">
                            <label class="form-label" asp-for="Description">Descripción:</label>
                            <textarea class="form-control" rows="3" asp-for="Description"></textarea>
                            <span class="text-danger" asp-validation-for="Description"></span>
                        </div>

                        <div class="d-flex justify-content-center mt-4">
                            <div class="me-2">
                                <button class="btn btn-success" type="submit">Actualizar</button>
                            </div>
                            <div>
                                <a class="btn btn-warning" asp-area="Admin" asp-controller="Improvement" asp-action="Index" >Volver</a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>