@using RealStateApp.Core.Domain.Common
@model HomeIndexViewModel

@{
    ViewData["Title"] = "Listado de Propiedades";
}

<div class="container-fluid">
    <div class="row">

        <!-- ==== SIDEBAR DE FILTROS ==== -->
        <div class="col-md-3 col-lg-3 mb-4">
            <div class="card shadow-sm">
                <div class="card-body">

                    <h5 class="mb-3">Filtros</h5>
                    <form asp-area="" asp-controller="Home" asp-action="Index" method="get">

                        <input type="hidden" asp-for="Filters.OnlyFavorites" value="@Model.Filters.OnlyFavorites" />

                        <!-- Tipo de propiedad -->
                        <div class="mb-3">
                            <label class="form-label">Tipo de Propiedad</label>
                            <select class="form-select" name="Filters.SelectedPropertyTypeId">
                                <option value="">Todos</option>
                                @foreach (var type in Model.PropertyTypes)
                                {
                                    if (type.Id == Model.Filters.SelectedPropertyTypeId)
                                    {
                                        <option value="@type.Id" selected="selected">@type.Name</option>
                                    }
                                    else
                                    {
                                        <option value="@type.Id">@type.Name</option>
                                    }
                                }
                            </select>
                        </div>
                        
                        <!-- Codigo -->
                        <div class="mb-3">
                            <label class="form-label">Codigo</label>
                            <input type="text"
                                   name="Filters.PropertyCode"
                                   class="form-control"
                                   value="@Model.Filters.PropertyCode" />
                        </div>

                        <!-- Precio mínimo -->
                        <div class="mb-3">
                            <label class="form-label">Precio Mínimo</label>
                            <input type="number"
                                   name="Filters.MinValue"
                                   class="form-control"
                                   value="@Model.Filters.MinValue" />
                        </div>

                        <!-- Precio máximo -->
                        <div class="mb-3">
                            <label class="form-label">Precio Máximo</label>
                            <input type="number"
                                   name="Filters.MaxValue"
                                   class="form-control"
                                   value="@Model.Filters.MaxValue" />
                        </div>

                        <!-- Habitaciones -->
                        <div class="mb-3">
                            <label class="form-label">Habitaciones</label>
                            <input type="number"
                                   name="Filters.Rooms"
                                   class="form-control"
                                   value="@Model.Filters.Rooms" />
                        </div>

                        <!-- Baños -->
                        <div class="mb-3">
                            <label class="form-label">Baños</label>
                            <input type="number"
                                   name="Filters.Bathrooms"
                                   class="form-control"
                                   value="@Model.Filters.Bathrooms" />
                        </div>

                        <div class="d-grid gap-2 mt-4">
                            <button type="submit" class="btn btn-primary">Buscar</button>
                            <a asp-action="Index" class="btn btn-secondary">Limpiar</a>
                        </div>

                    </form>

                </div>
            </div>
        </div>

        <!-- ==== LISTADO DE PROPIEDADES ==== -->
        <div class="col-md-9 col-lg-9">
            <div class="row">

                @if (Model.Properties == null || !Model.Properties.Any())
                {
                    <div class="col-12">
                        <div class="alert alert-info text-center">
                            No se encontraron propiedades con los filtros seleccionados.
                        </div>
                    </div>
                }
                else
                {
                    @foreach (var prop in Model.Properties)
                    {
                        @if (User.IsInRole(nameof(Roles.Client)))
                        {
                            @await Html.PartialAsync("_PropertyCardClient", prop)
                        }
                        else
                        {
                            @await Html.PartialAsync("_PropertyCard", prop)
                        }
                    }
                }

            </div>
        </div>

    </div>
</div>
